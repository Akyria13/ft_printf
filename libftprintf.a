########################################################################################################################
#                                                      VARIABLES                                                       #
########################################################################################################################\

NAME = 				libftprintf.a
HEAD = 				ft_printf .h

AR = 				ar rcs
RM = 				rm -f

CC = 				cc
CFLAGS = 			-Wall -Wextra -Werror

SRC = \

OBJS = 				$(SRC:%.c=$(OBJ_DIR)%.o)

########################################################################################################################
#                                                      DIRECTORY                                                       #
########################################################################################################################

# OBJ_DIR = obj/

########################################################################################################################
#                                                       COMMANDS                                                       #
########################################################################################################################

$(NAME) : 			$(OBJS) Makefile
					$(AR) $@ $^

$(OBJ_DIR)%.o:		%.c $(HEAD)
# | $(OBJ_DIR)
					$(CC) $(CFLAGS) -I. -o $@ -c $<

$(OBJ_DIR) :
					mkdir -p
# $(OBJ_DIR)

########################################################################################################################
#                                                      TARGETS                                                         #
########################################################################################################################

all : 				$(NAME)

clean :
					@$(RM) -rf
# $(OBJ_DIR)
					@echo "Deleting 'obj'"

fclean : 			clean
					@$(RM) $(NAME)
					@echo "Deleting libftprintf.a"

re : 				fclean all

.PHONY : 			all bonus clean fclean re

